{% extends "base.html.twig" %}

{% block title %}Urgent Matter - Login{% endblock %}

{% block nav %}
    {% include "includes/portal_nav.html.twig" %}
{% endblock %}

{% block banner %}
    {% include "includes/portal_banner.html.twig" %}
{% endblock %}

{% block body %}
    <div class="login-form-container container pt-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
    
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
    
            <div class="pb-3">
                <h1 class="h3 font-weight-normal">Sign into UrgentMatter... urgently.</h1>
                <small class="text-muted">
                    UrgentMatter, where work gets <strike>done</strike> set to pending.
                </small>
            </div>
            <div class="form-group pb-3">
                <label for="username">Username</label>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="form-group pb-3">
                <label for="password">Password</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>
    
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
    
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
    
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
    
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </form>
    </div>
{% endblock %}
